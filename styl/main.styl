/// colours
  // general colours
  $pink = #E0B396
  $brown = #731C25
  $green = #4C6425
  $teal = #016AA7
  $powder = #C1E5F6
  $mustard_old = #D5A30B
  $mustard = #BD900A
  // $mustard = #b73950
  $lightMustard = rgba($mustard,0.4)  // #E4D19C
  $lightBrown = rgba($brown,0.9)
  $lightPink = rgba($pink,0.4)
  $white = lightness($mustard, 95)
  $om = #072966

  body
    color white
    background black

  header
    background black

  header h1
    color $white

  nav
    color $om
    background $mustard
  
  nav .tab.active
    color black
    background $white

  section
    color black
    background $white

//
/// layout
  *
    margin 0
    padding 0
    box-sizing border-box
  
  body
    margin 0 auto
    max-width 1920px
  
  aside
    width 25%

  main
    display flex

  aside img
    width 100%
  
  header
    display flex
    padding 1rem
    align-items center
    justify-content center

  header h1
    margin 0 auto
    text-align center

  header img
    max-height 150px
    margin 0 5rem

  @keyframes headingDown
    0%
      top -50px
    100%
      top 200px

  @keyframes headingUp
    0%
      top 200px
    100%
      top 100px

  nav
    top 0px
    position sticky
    z-index 5
    animation-duration 3s
    // animation-name opac
    animation-fill-mode forwards

  // main
  //   // animation-name opac
  //   animation-duration 3s
  //   animation-fill-mode forwards

  @keyframes opac
    0% 
      opacity 0
    100%
      opacity 1

  section
    opacity 0
    display none
    padding 1rem 2rem
    transition opacity 2s
    justify-content space-between
    width 75%
    &.active
      animation-name opac
      display inline-block
      animation-duration 1s
      animation-fill-mode forwards
  
  article
    display flex
    // padding 0 1rem 1rem 1rem

  .half
    width 48%
    margin 1rem

  .spacer
    min-width 3rem

  .pic
    text-align right

  .pic img
    width 200px
  
  .pic a img
    height 45px
    width 45px

  .right
    right 0
    margin-right -20px
    position absolute

  
  button
    color $om
    margin 1rem
    font-size 1.5rem
    padding 1rem 2rem
    background $mustard
    border 2px solid $brown
  
 
//
/// nav tabs

  nav
    display flex
    flex-wrap wrap
    justify-content space-between

  nav .tab
    flex-grow 1
    padding 1rem
    cursor pointer
    text-align center
    border 2px solid orange

//    
/// typography

  body
    font-family 'Mulish', sans-serif
  
  h1, h2, h3, .tab
    font-family 'Philosopher', sans-serif

  h1
    font-size 4rem
  
  h2
    width 100%
    font-size 2.5rem
    margin-bottom 0.5rem

  h2.title
    text-align center
    font-size 3rem
    // border 1px solid blue

  h3
    font-size 1.5rem

  nav .tab
    font-size 2.5rem
    // font-weight bold

  p, li
    line-height 1.3
    font-size 1.5rem
    margin-bottom 0.75rem

  li
    margin-bottom 0

  ul
    margin-left 15rem
    margin-top -2.65rem
    display inline-block

  th
    font-size 1.5rem

  td
    font-size 1.33rem

  a
    text-decoration none

//
/// textimonial
  blockquote
    width 80%
    position relative
    border-radius 1rem
    padding 0.25rem 1rem
    margin 1rem auto 1.5rem auto
    background alpha($mustard, 0.5)
    border-left 15px solid $mustard

  span.quote
    left 1rem
    top -0.5rem
    font-size 7rem
    position absolute
    font-family sans-serif

  .testimonial
    margin-top 3rem
    font-size 1.5rem
    font-style italic
    
  .punter
    text-align right
    font-size 1.25rem
    margin-bottom 1rem

//
/// tables
  table
    border-collapse collapse
    border 4px solid $brown
    border-spacing 0
    border-bottom 18px solid $tablehead
    // background $brown 
    width 85%
    margin 0 auto 1em auto
    font-size 1.25rem

  th, td
    padding 0.5em 1em
    color $contenttext
    border-collapse collapse
    border 1px solid $brown

  th
    color $white
    background $brown
    &.last
      border-right: none